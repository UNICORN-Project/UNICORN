{
    "name": "UNICORN-Project",
    "type": "project",
    "description" : "Fast Start Project Framework.",
    "keywords": ["application", "website", "development", "framework", "PHP", "iOS", "Android"],
    "license": "MIT",
    "repositories": [
        { "packagist": false },
        {
            "type": "package",
            "package": {
                "name": "lib",
                "type": "unicorn-package",
                "version": "1",
                "dist": {
                    "url": "https://github.com/UNICORN-Project/lib/archive/master.zip",
                    "type": "zip"
                },
                "source": {
                    "url": "https://github.com/UNICORN-project/lib.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "lib": "1"
    },
    "config": {
        "vendor-dir": "../UNICORN"
    },
    "scripts": {
        "pre-update-cmd":  [
            "cp -R ./_tmp ../../",
            "cp -R ../../lib/FrameworkPackage/core/config.xml ../../_tmp/config.xml.bak",
            "cp -R ../../lib/FrameworkPackage/core/package.xml ../../_tmp/package.xml.bak",
            "cp -R ../../lib/FrameworkManager/core/FrameworkManager.config.xml ../../_tmp/FrameworkManager.config.xml.bak",
            "cp -R ../../lib/FrameworkManager/core/FrameworkManager.package.xml ../../_tmp/FrameworkManager.package.xml.bak"
        ],
        "post-install-cmd": [
            "cp -R ./_tmp ../../",
            "mv -R ./lib ../../"
        ],
        "post-update-cmd": [
            "mv -R ./lib ../../"
        ]
    },
    "minimum-stability": "dev"
}